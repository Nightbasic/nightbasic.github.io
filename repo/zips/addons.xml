<?xml version='1.0' encoding='utf-8'?>
<addons><addon id="repository.nightfall" name="Nightfall" version="1.0.0" provider-name="unison">
    <extension point="xbmc.addon.repository" name="Nightfall Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/Nightbasic/nightbasic.github.io/main/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/Nightbasic/nightbasic.github.io/main/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/Nightbasic/nightbasic.github.io/main/repo/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Nightfall</summary>
        <description>The Nightfall Repository</description>
        <disclaimer />
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
<addon id="plugin.program.nightfallwizard" name="Nightfall Wizard" version="1.0.0" provider-name="unison/Night Basic">
